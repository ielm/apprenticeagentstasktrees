DEFINE take($agent, $theme) AS TEMPLATE
    TYPE PHYSICAL
    REQUIRES @EXE.GET-CAPABILITY
    ROOT @OUT.TAKE.1
    INCLUDE

    @OUT.TAKE.1 = {
        AGENT $agent;
        THEME $theme;
    }
;
