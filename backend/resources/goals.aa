DEFINE FIND-SOMETHING-TO-DO()
    AS GOAL
    IN EXE
    PRIORITY 0.1
    RESOURCES 0.3
    ACTION (acknowledge input)
        SELECT IF EXISTS (@^ EXE.INPUT-TMR AND ACKNOWLEDGED = FALSE)
        DO FOR EACH $tmr IN (@^ EXE.INPUT-TMR AND ACKNOWLEDGED = FALSE)
        | SELF[HAS-GOAL] += @SELF:EXE.ACKNOWLEDGE-INPUT($tmr)
        | $tmr[ACKNOWLEDGED] = True
    ACTION (idle)
        SELECT DEFAULT
        DO IDLE
;
DEFINE UNDERSTAND-TMR($tmr)
    AS GOAL
    IN EXE
    PRIORITY SELF.prioritize_learning($tmr)
    RESOURCES SELF.evaluate_resources($tmr)
    ACTION (understand TMR)
        SELECT DEFAULT
        DO CAPABILITY #EXE.LEARN-CAPABILITY($tmr)
        | THEN DO $tmr[STATUS] = "UNDERSTOOD"
    WHEN $tmr[STATUS] == "UNDERSTOOD" THEN satisfied
;
DEFINE ACKNOWLEDGE-INPUT($tmr)
    AS GOAL
    IN EXE
    PRIORITY SELF.prioritize_learning($tmr)
    RESOURCES SELF.evaluate_resources($tmr)
    ACTION (acknowledge input)
#        SELECT IF EXISTS (@^ EXE.INPUT-TMR AND ACKNOWLEDGED = False)
        SELECT DEFAULT
        DO SELF[HAS-GOAL] += @SELF:EXE.DECIDE-ON-LANGUAGE-INPUT($tmr)
        DO $tmr[STATUS] == "ACKNOWLEDGED"
    WHEN $tmr[STATUS] == "ACKNOWLEDGED" OR $tmr[STATUS] == "IGNORED" THEN satisfied
;
DEFINE DECIDE-ON-LANGUAGE-INPUT($tmr)
    AS GOAL
    IN EXE
    PRIORITY SELF.prioritize_learning($tmr)
    RESOURCES SELF.evaluate_resources($tmr)
    ACTION (decide on language input)
        SELECT DEFAULT
        DO SELF.decide_on_language_input($tmr)
        DO SELF[HAS-GOAL] += @SELF:EXE.PERFORM-COMPLEX-TASK($tmr)
;
DEFINE RESPOND-TO-QUERY($tmr)
    AS GOAL
    IN EXE
    PRIORITY SELF.prioritize_learning($tmr)
    RESOURCES SELF.evaluate_resources($tmr)
;
DEFINE PERFORM-COMPLEX-TASK($task)
    AS GOAL
    IN EXE
    PRIORITY SELF.prioritize_learning($task)
    RESOURCES SELF.evaluate_resources($task)
    ACTION (perform complex task)
        SELECT DEFAULT
        DO SELF.perform_complex_task($task)
        DO IDLE
;